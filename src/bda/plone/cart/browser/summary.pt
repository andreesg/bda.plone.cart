<div id="cart"
     i18n:domain="bda.plone.cart"
     tal:attributes="data-context-url view/context_url"
     tal:define="tickets python: True;
                pre_cart_text python: view.get_pre_cart(True);
                post_cart_text python: view.get_post_cart(True);
                extra_tickets_text python: view.get_extra_tickets_text()">

  <div class="tickets-breadcrumbs">
      <button 
       class="btn btn-default step step-1 selected" type="button" i18n:translate="step_tickets">1. Tickets</button>

      <button 
       class="btn btn-default disabled step step-2" type="button" i18n:translate="step_details">2. Gegevens</button>

      <button 
       class="btn btn-default disabled step step-3" type="button" i18n:translate="step_details_control">3. Gegevens Controleren</button>

      <button 
       class="btn btn-default disabled step step-4" type="button" i18n:translate="step_details_payment">4. Betalen</button>
  </div>

  <div class="pre-cart" tal:condition="pre_cart_text" id="parent-fieldname-text">
    <p tal:content="structure python: pre_cart_text.output_relative_to(context.view)"></p>
  </div>

  <span style="display:none;"
        class="cart_execution_context">summary</span>

  <span id="separator_template" style="display:none">
  <table>
    <thead>
      <tr class="cart-header">
        <th class="type-ticket-th"><h3 i18n:translate="type_ticket">Type ticket</h3></th>
          <th><h3 i18n:translate="price">Prijs</h3></th>
          <th class="quantity-th"><h3 i18n:translate="quantity">Aantal</h3></th>
          <th class="subtotal-th"><h3 i18n:translate="subtotal">Subtotaal</h3></th>
      </tr>
    </thead>
    <tbody>
    <tr class="separator_template">
      <td class="pre-cart" style="padding-left:0px;padding-right:0px;padding-top:50px;" colspan="4">
        <h3 i18n:translate="extra_tickets">Aanvullende reservering:</h3>
        <tal:extra_tickets_text tal:condition="extra_tickets_text">
          <p tal:content="structure python: extra_tickets_text.output_relative_to(context.view)"></p>
        </tal:extra_tickets_text>
      </td>
      <td class="separator-td"></td>
      <td class="separator-td quantity-col"></td>
      <td class="separator-td subtotal-col"></td>
    </tr>
  </tbody>
  </table>
</span>

  <span id="cart_item_template" style="display: none;"
    tal:define="currency view/currency">
    <table>
      <thead>
        <tr class="cart-header">
          <th><h4>Type ticket</h4></th>
          <th><h4 i18n:translate="price">Prijs</h4></th>
          <th class="quantity-th"><h4 i18n:translate="quantity">Aantal</h4></th>
          <th class="subtotal-th"><h4 i18n:translate="subtotal">Subtotaal</h4></th>
        </tr>
      </thead>
    <tbody>
      <tr class="cart_item summary_item cart_item_content">
        <td class="type-ticket-td"><h4><span class="cart_item_title">Entree volwassene</span></h4></td>
        <td>
          <h4>
            <span class="price original">
              <span tal:content="currency">EUR</span><span class="cart_item_original_price">â‚¬ 17.50</span>
            </span>
          </h4>
        </td>
        <td class="quantity-col">
          <span class="cart_item_uid" style="display: none;">uid</span>
          <span class="cart_item_ticket" style="display: none;">ticket</span>
          <div class="cart-select-box">
            <select class="select form-control cart_item_count cart_tickets">
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
            </select>
          </div>
          <span class="cart_item_count" style="display: none;">0</span>
        </td>
        <td class="subtotal-col">
          <span class="cart_item_uid" style="display: none;">uid</span>
          <span class="cart_item_ticket" style="display: none;">uid</span>
          <span class="price cart_tickets">
            <h4><span tal:content="currency">EUR</span><span class="cart_item_price">Price</span></h4>
          </span>
        </td>
      </tr>
    </tbody>
    </table>
  </span>

  <div class="table-responsive cart-table">
    <table>
      <thead>
        <tr class="cart-header">
          <th i18n:translate=""><h4 i18n:translate="type_ticket">Type ticket</h4></th>
          <th i18n:translate=""><h4 i18n:translate="price">Prijs</h4></th>
          <th i18n:translate="" class="quantity-th"><h4 i18n:translate="quantity">Aantal</h4></th>
          <th i18n:translate="" class="subtotal-th"><h4 i18n:translate="subtotal">Subtotaal</h4></th>
        </tr>
      </thead>
      <tbody id="cart_items" style="display:none">
      </tbody>
    </table>
  </div>

  <div id="cart_no_items" style="display: none;">
    <p i18n:translate="empty_cart">Cart is empty</p>
  </div>

  <div id="cart_summary" style="display: none;" class="summary_wrapper clearfix">
    <table class="cart_sum_content invisible-grid"
           tal:define="currency view/currency">
      <tal:details condition="not:view/summary_total_only">
        <tr style="display: none;">
          <td i18n:translate="summary_net" class="summary_label">Net:</td>
          <td class="cart_net summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
        <tr style="display: none;">
          <td i18n:translate="summary_vat" class="summary_label">VAT.:</td>
          <td class="cart_vat summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
        <tr class="discount" style="display: none;">
          <td i18n:translate="discount_net" class="summary_label">Discount Net:</td>
          <td class="discount_net summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
        <tr class="discount" style="display: none;">
          <td i18n:translate="discount_vat" class="summary_label">Discount VAT.:</td>
          <td class="discount_vat summary_ammount">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
        </tr>
      </tal:details>

      <tr class="discount" style="display: none;">
        <td class="summary_label"><strong i18n:translate="discount_total">Discount Total:</strong></td>
        <td class="summary_ammount"><strong class="discount_total">Total</strong></td>
        <td tal:condition="currency" class="sumary_currency">
          <strong tal:content="currency">EUR</strong>
        </td>
      </tr>
      <tr class="shipping" style="display: none;">
        <td class="summary_label">
          <span class="shipping_info">
            <span i18n:translate="summary_shipping" tal:omit-tag>Shipping</span>:
            <span class="shipping_label"></span>
            <span class="shipping_description"></span>:
          </span>
        </td>
        <td class="shipping_total summary_ammount">0.00</td>
        <td tal:content="currency" tal:condition="currency" class="sumary_currency">EUR</td>
      </tr>

      <tr>
        <td class="summary_label"><strong i18n:translate="summary_total">Total:</strong></td>
        <td class="summary_ammount"><strong class="cart_total ">Total</strong></td>
        <td tal:condition="currency" class="sumary_currency">
          <strong tal:content="currency">EUR</strong>
        </td>
      </tr>
    </table>
    <div class="visualClear"></div>
  </div>

  <div id="portlet-calendar" style="clear:both;">
    <tal:block replace="structure provider:plone.rightcolumn" />
  </div>

  <div class="cart_summary_buttons">
    <a href="javascript:history.back()" class="standalone cart_back"
       i18n:translate="back" style="display:none;">back</a>
    <a href="@@checkout"
       class="context btn btn-default cart_checkout_button prevent_if_no_longer_available"
       tal:define="checkout_url view/checkout_url"
       i18n:translate="checkout"
       >Checkout</a>
  </div>

  <div class="post-cart" tal:condition="post_cart_text">
    <p tal:content="structure python: post_cart_text.output_relative_to(context.view)"></p>
  </div>
</div>
