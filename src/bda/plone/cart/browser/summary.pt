<div id="cart"
     i18n:domain="bda.plone.cart" class="first-cart">


  <div class="tickets-breadcrumbs shop">
      <a href=""
       class="btn step step-1 selected" type="button" i18n:translate="">1. Winkelwagen</a>

      <a href=""
       class="btn disabled step step-2" type="button" i18n:translate="">2. Person details</a>

      <a href=""
       class="btn disabled step step-3" type="button" i18n:translate="">3. Verify details</a>

      <a href=""
       class="btn disabled step step-4" type="button" i18n:translate="">4. Payment</a>
  </div>
    
  <span style="display:none;"
        class="cart_execution_context">summary</span>

  <div class="table-inner-wrapper">
    <h2 style="text-align:left;font-size: 1.500em;padding-bottom:20px;padding-top:60px;">Artikelen in uw winkelwagen</h2>
    <p style="padding-bottom:20px;">Hieronder kunt u alle artikelen vinden die u geselecteerd heeft</p>
  </div>

  <span id="cart_item_template" style="display:none"
  tal:define="currency view/currency">
  <table>
    <thead>
      <tr class="cart-header">
        <th i18n:translate="">Omschrijving</th>
        <th i18n:translate="">Price</th>
        <th i18n:translate="" class="quantity-th">Amount</th>
        <th i18n:translate="" class="subtotal-th">Subtotal</th>
      </tr>
    </thead>
  <tbody>
  
  <tr class="cart_item summary_item cart_item_content">
    <td style="width:50%;"><h4><span class="cart_item_title">Entree volwassene</span></h4></td>
    <td>
      <span class="price original">
        <span tal:content="currency">EUR</span><span class="cart_item_original_price">€ 17.50</span>
      </span>
    </td>
    <td class="quantity-col" style="width: 10%;">
      <span class="cart_item_uid" style="display: none;">uid</span>
      <div class="cart-select-box">
        <select class="select form-control cart_item_count cart_tickets">
          <option value="0">0</option>
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
          <option value="8">8</option>
          <option value="9">9</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
          <option value="13">13</option>
          <option value="14">14</option>
          <option value="15">15</option>
        </select>
      </div>
      <span class="cart_item_count" style="display: none;">0</span>
    </td>
    <td class="subtotal-col">
      <span class="cart_item_uid" style="display: none;">uid</span>
      <span class="price cart_tickets">
        <span tal:content="currency">EUR</span><span class="cart_item_price">Price</span>
      </span>
    </td>
  </tr>
  </tbody>
</table>
</span>
  
  <div class="table-responsive table_wrapper">
    <div class="table-inner-wrapper">
      <table>
        <thead>
          <tr class="cart-header">
            <th i18n:translate="">Omschrijving</th>
            <th i18n:translate="">Price</th>
            <th i18n:translate="" class="quantity-th">Amount</th>
            <th i18n:translate="" class="subtotal-th">Subtotal</th>
          </tr>
        </thead>
        <tbody id="cart_items" style="display:none">
        </tbody>
      </table>
    </div>
  </div>

  <div id="cart_no_items" style="display: none;">
    <p i18n:translate="empty_cart">Cart is empty</p>
  </div>



  <div id="cart_summary" style="display: none;" class="summary_wrapper">
    <div class="visualClear"></div>
  
    <div style="padding-top:70px;" class="shipping_costs_table">
    
    <div class="table-inner-wrapper">
    <h2 style="text-align:left;font-size: 1.250em; padding-bottom:30px;">Overige kosten</h2>
    </div>

    <div class="table_wrapper">
    <div class="table-inner-wrapper">
      <table>

        <thead>
          <tr class="cart-header">
            <th i18n:translate="">Omschrijving</th>
            <th i18n:translate="">Price</th>
            <th i18n:translate="" class="subtotal-th">Subtotal</th>
          </tr>
        </thead>
        <tbody>
            <tr class="cart_item summary_item cart_item_content">
              <td style="width:50%;"><span class="shipping_label" style="font-size:1em;"></span> <span class="shipping_description" style="font-size:1em;">Shipping</span></td>
              <td>
                <span class="price original">
                  <span>€ </span><span class="shipping_total">€ 17.50</span>
                </span>
              </td>

              <td class="subtotal-col">
                <span>€ </span><span class="shipping_total">Price</span>
              </td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>

    <div class="visualClear"></div>

    <div class="table-inner-wrapper">
    <table class="cart_sum_content"
           tal:define="currency view/currency">
      <tal:details condition="not:view/summary_total_only">
      </tal:details>
    </table>

    <div class="total-price-wrapper" style="padding-top:50px;text-align:left;" tal:define="currency view/currency">
      <h2 style="font-size:1.500em; padding-bottom:15px;" i18n:translate="total_label">Totaalprijs</h2>
      <p style="font-size:1.500em; font-weight:700; color:#666666;">
        <span tal:content="currency"></span><span class="cart_total" ></span>
      </p>
    </div>
 
    <div class="visualClear"></div>

  </div>
  </div>
</div>
  

  <div class="cart_summary_buttons table-inner-wrapper">
    <a href="javascript:history.back()" class="cart_back"
       i18n:translate="back">back</a>
    <a href="@@checkout"
       class="cart_checkout_button prevent_if_no_longer_available"
       tal:define="checkout_url view/checkout_url"
       tal:condition="checkout_url"
       tal:attributes="href checkout_url"
       i18n:translate="checkout">Checkout</a>
  </div>

</div>