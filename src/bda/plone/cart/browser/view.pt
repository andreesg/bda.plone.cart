<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="bda.plone.cart">

    <head>
      <metal:top fill-slot="top_slot">
        <tal:border define="dummy python:request.set('disable_border', True)" />
      </metal:top>
    </head>

    <body>
        <metal:main fill-slot="main">
            <tal:main-macro metal:define-macro="main"
              tal:define="tickets python: '/tickets' in context.absolute_url();
                          tickets_header python: view.get_tickets_header(tickets);">
                

                <div id="cart-page-header" tal:attributes="style python: 'background-image:url(%s)' %(tickets_header)">
                  <h1 class="documentFirstHeading" tal:content="context/Title" tal:condition="tickets">Title</h1>
                  <h1 class="documentFirstHeading" i18n:translate="cart" tal:condition="not:tickets">Cart</h1>
                </div>

                <tal:cart replace="structure context/@@cart_summary" tal:condition="not:tickets"/>
                <tal:ticket_cart replace="structure context/@@ticket_cart_summary" tal:condition="tickets"/>
            </tal:main-macro>
        </metal:main>
    </body>
</html>