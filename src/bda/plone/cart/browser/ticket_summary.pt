<div id="cart"
     i18n:domain="bda.plone.cart">

  <div class="tickets-breadcrumbs">
      <a href=""
       class="btn step step-1 selected" type="button">1. Tickets</a>

      <a href=""
       class="btn disabled step step-2" type="button">2. Persoonsgegevens</a>

      <a href=""
       class="btn disabled step step-3" type="button">3. Gegevens controleren</a>

      <a href=""
       class="btn disabled step step-4" type="button">4. Betalen</a>
  </div>
  
  <span style="display:none;"
        class="cart_execution_context">summary</span>

  <span id="cart_item_template" style="display: none;"
    tal:define="currency view/currency">
    <div class="cart_item summary_item">
      <h3>
          <span class="cart_item_title">Title</span>
      </h3>
      <div class="cart_item_alert" style="display: none;">Alert</div>
      <img class="cart_item_preview_image" src="" />
      <p class="cart_item_description">Description</p>
      <div class="cart_item_comment_wrapper">
        <strong i18n:translate="comment">Comment</strong>:
        <span class="cart_item_comment">comment</span>
      </div>
      <ul class="cart_item_content">
        <li>
          <span class="price">
            <span class="cart_item_original_price">Price</span>&nbsp;<span tal:content="currency">EUR</span>
          </span>
        </li>
        <li>
          <span class="cart_item_uid" style="display: none;">uid</span>
          <span class="cart_item_comment" style="display: none;">comment</span>

            <select class="select form-control cart_item_count">
              <option value="0">0</option>
              <option value="1">1</option>
              <option value="2">2</option>
              <option value="3">3</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
              <option value="7">7</option>
              <option value="8">8</option>
              <option value="9">9</option>
              <option value="10">10</option>
              <option value="11">11</option>
              <option value="12">12</option>
              <option value="13">13</option>
              <option value="14">14</option>
              <option value="15">15</option>
            </select>
        
          <a href=""
             class="update_cart_item update_cart_action"
             title="Update cart"
             i18n:attributes="title update_cart">&nbsp;</a>
        </li>
        <li>
          <span class="cart_item_uid" style="display: none;">uid</span>
          <span class="cart_item_comment" style="display: none;">comment</span>
          <span class="cart_item_count" style="display: none;">0</span>
          <a href=""
             class="update_cart_item remove_from_cart_action"
             title="Remove from cart"
             i18n:attributes="title remove_from_cart">&nbsp;</a>
        </li>
        <li>
          <span class="price">
            <span class="cart_item_price">Price</span>&nbsp;<span tal:content="currency">EUR</span>
          </span>
        </li>
      </ul>
      <div class="visualClear"></div>
    </div>
  </span>

  <div id="cart_items" style="display: none;"></div>

  <div id="cart_no_items" style="display: none;">
    <p i18n:translate="empty_cart">Cart is empty</p>
  </div>

  <div id="cart_summary" style="display: none;" class="summary_wrapper">
    <table class="cart_sum_content"
           tal:define="currency view/currency">
      <tal:details condition="not:view/summary_total_only">
        <!--<tr>
          <td i18n:translate="summary_net">Net:</td>
          <td class="cart_net">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="currency">EUR</td>
        </tr>-->
        <!--<tr>
          <td i18n:translate="summary_vat">VAT.:</td>
          <td class="cart_vat">0.00 <span tal:content="currency" tal:condition="currency">EUR</span></td>
          <td tal:content="currency" tal:condition="currency" class="currency">EUR</td>
        </tr>-->
        <tr class="discount" style="display: none;">
          <td i18n:translate="discount_net">Discount Net:</td>
          <td class="discount_net">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="currency">EUR</td>
        </tr>
        <tr class="discount" style="display: none;">
          <td i18n:translate="discount_vat">Discount VAT.:</td>
          <td class="discount_vat">0.00</td>
          <td tal:content="currency" tal:condition="currency" class="currency">EUR</td>
        </tr>
      </tal:details>
      <tr class="discount" style="display: none;">
        <td><strong i18n:translate="discount_total">Discount Total:</strong></td>
        <td><strong class="discount_total">Total</strong></td>
        <td tal:condition="currency">
          <strong tal:content="currency" class="currency">EUR</strong>
        </td>
      </tr>
      <tr class="shipping" style="display: none;">
        <!--td>
          <span i18n:translate="summary_shipping">Shipping</span>:
          <span class="shipping_label"></span>
          <span class="shipping_description"></span>:
        </td>
        <td class="shipping_total">0.00</td>
        <td tal:content="currency" tal:condition="currency">EUR</td>-->
      </tr>
      <tr>
        <td><strong i18n:translate="summary_total">Total:</strong></td>
        <td><strong class="cart_total">Total</strong></td>
        <td tal:condition="currency">
          <strong tal:content="currency">EUR</strong>
        </td>
      </tr>
    </table>
    <div class="visualClear"></div>
  </div>

  <div class="cart_summary_buttons">
    <a href="@@checkout"
       class="cart_checkout_button btn prevent_if_no_longer_available"
       tal:define="checkout_url view/checkout_url"
       tal:attributes="href python: '@@checkout'"
       i18n:translate="checkout" type="button">Checkout</a>
  </div>
</div>
